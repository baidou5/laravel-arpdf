{
  "name": "baidouabdellah/laravel-arpdf",
  "description": "Generate Arabic-friendly PDFs in Laravel (wrapper around mPDF)",
  "type": "library",
  "license": "MIT",

 "require": {
  "php": "^8.0",
  "illuminate/support": "^8.0 || ^9.0 || ^10.0 || ^11.0 || ^12.0",
  "mpdf/mpdf": "^8.2"
},


  "autoload": {
      "psr-4": {
          "Baidouabdellah\\LaravelArpdf\\": "src/"
      }
  },

  "extra": {
      "laravel": {
          "providers": [
              "Baidouabdellah\\LaravelArpdf\\ArPDFServiceProvider"
          ],
          "aliases": {
              "ArPDF": "Baidouabdellah\\LaravelArpdf\\Facades\\ArPDF"
          }
      }
  },

  "minimum-stability": "stable",
  "prefer-stable": true
}
